                FontSize="20"
                HorizontalOptions="Center"/>-->

            <!--<Button
                x:Name="CounterBtn"
                Text="Click to realize DataBinding"               
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
